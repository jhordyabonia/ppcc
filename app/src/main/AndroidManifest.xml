<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ppcc.jhordyabonia.com.petropresidentecapturaaloscorruptos">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/presidente"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/presidente"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Game"
            android:label="@string/game_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Capturados"
            android:label="Corruptos Colombia"/>
    </application>

</manifest>